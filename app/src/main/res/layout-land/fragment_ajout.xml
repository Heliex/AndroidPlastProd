<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:ems="10"
        android:id="@+id/TextNom"
        android:textColor="@color/textColor"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Prénom"
        android:ems="10"
        android:id="@+id/TextPrenom"
        android:textColor="@color/textColor"
        android:layout_below="@+id/TextNom"
        android:layout_alignStart="@+id/TextNom"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Adresse"
        android:textColor="@color/textColor"
        android:ems="10"
        android:id="@+id/TextAdresse"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/TextPrenom"
        android:layout_alignStart="@+id/TextPrenom" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TextEmail"
        android:layout_below="@+id/TextAdresse"
        android:layout_alignStart="@+id/TextAdresse"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:textColor="@color/textColor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/TextTel"
        android:layout_below="@+id/TextEmail"
        android:layout_alignStart="@+id/TextEmail"
        android:layout_marginTop="10dp"
        android:hint="Tél."
        android:textColor="@color/textColor"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/TextDate"
        android:layout_below="@+id/TextTel"
        android:layout_alignStart="@+id/TextTel"
        android:layout_marginTop="10dp"
        android:hint="Date"
        android:textColor="@color/textColor"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Valider"
        android:id="@+id/validerAjout"
        android:layout_marginLeft="90dp"
        android:layout_marginStart="79dp"
        android:layout_alignTop="@+id/TextAdresse"
        android:layout_alignParentStart="true" />

</RelativeLayout>