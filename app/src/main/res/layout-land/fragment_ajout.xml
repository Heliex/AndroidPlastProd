<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="@drawable/background">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nom"
        android:textColor="@color/textColor"
        android:ems="10"
        android:id="@+id/TextNom"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/Notif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Prenom"
        android:textColor="@color/textColor"
        android:ems="10"
        android:id="@+id/TextPrenom"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_below="@+id/TextNom"
        android:layout_alignStart="@+id/TextNom" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Adresse"
        android:textColor="@color/textColor"
        android:ems="10"
        android:id="@+id/TextAdresse"
        android:gravity="center_horizontal"
        android:layout_gravity="center"
        android:layout_below="@+id/TextPrenom"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/TextPrenom" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/TextEmail"
        android:hint="Email"
        android:textColor="@color/textColor"
        android:gravity="center_horizontal"
        android:layout_below="@+id/TextAdresse"
        android:layout_toEndOf="@+id/Notif" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/TextTel"
        android:hint="TÃ©l."
        android:textColor="@color/textColor"
        android:gravity="center_horizontal"
        android:layout_below="@+id/TextEmail"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Notif" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/TextDate"
        android:hint="Date"
        android:textColor="@color/textColor"
        android:gravity="center_horizontal"
        android:layout_below="@+id/TextTel"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/Notif" />

    <Button
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:text="Valider"
        android:id="@+id/validerAjout"
        android:layout_marginLeft="90dp"
        android:layout_gravity="center"
        android:layout_marginEnd="59dp"
        android:layout_alignBottom="@+id/TextDate"
        android:layout_toStartOf="@+id/TextTel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/Notif"
        android:layout_below="@+id/validerAjout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

</RelativeLayout>