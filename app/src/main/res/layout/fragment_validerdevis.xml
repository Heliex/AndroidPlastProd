<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">

    <ListView
        android:id="@+id/ListViewProspectDevisValider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_alignParentBottom="true" />

    <ListView
        android:id="@+id/ListeDevis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"/>
    <ScrollView
        android:id="@+id/scrollViewDevis"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">
            <TextView
            android:id="@+id/recapitulatifDevis"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:visibility="invisible"
                android:height="1500dp" />
    </ScrollView>


    <Button android:id="@+id/ValiderDevisFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Valider le devis"/>
</RelativeLayout>